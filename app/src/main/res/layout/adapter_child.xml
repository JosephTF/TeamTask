<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/common_space_size36"
    android:layout_marginBottom="@dimen/common_space_size1"
    android:background="#fff">

    <TextView
        android:id="@+id/tv_key"
        android:layout_width="@dimen/common_space_size80"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/common_space_size10"
        android:textColor="#999"
        android:textSize="@dimen/common_text_size16" />

    <TextView
        android:id="@+id/tv_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_key"
        android:textColor="#333"
        android:textSize="@dimen/common_text_size16" />
</RelativeLayout>
