<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- 标题 -->
        <RelativeLayout
            android:id="@+id/rl_me_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_space_size50"
            android:background="@drawable/background_title">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/me_title"
                android:textColor="#fff"
                android:textSize="@dimen/common_text_size18" />

            <com.assistne.icondottextview.IconDotTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/common_space_size8"
                app:dot_marginBottom="@dimen/common_space_size6"
                app:dot_marginLeft="@dimen/common_space_size16"
                app:dot_size="@dimen/common_space_size6"
                app:dot_visible="true"
                app:text="@string/common_setting"
                app:textColor="#fff"
                app:textSize="@dimen/common_text_size14" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_space_size2"
            android:background="#e5e5e5" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_space_size1"
                    android:layout_marginTop="@dimen/common_space_size6"
                    android:background="#f2f4f5" />
                <!-- 头像 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_space_size72"
                    android:background="#fff">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/civ_me_avatar"
                        android:layout_width="@dimen/common_space_size50"
                        android:layout_height="@dimen/common_space_size50"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/common_space_size16"
                        android:src="@drawable/default_avatar" />

                    <TextView
                        android:id="@+id/tv_me_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="@dimen/common_space_size14"
                        android:layout_marginTop="@dimen/common_space_size12"
                        android:layout_toRightOf="@id/civ_me_avatar"
                        android:text="@string/common_username"
                        android:textColor="#333"
                        android:textSize="@dimen/common_text_size16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_me_username"
                        android:layout_marginLeft="@dimen/common_space_size14"
                        android:layout_marginTop="@dimen/common_space_size4"
                        android:layout_toRightOf="@id/civ_me_avatar"
                        android:text="@string/me_jobposition"
                        android:textColor="#999"
                        android:textSize="@dimen/common_text_size12" />

                    <ImageView
                        android:layout_width="@dimen/common_space_size24"
                        android:layout_height="@dimen/common_space_size24"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/common_space_size16"
                        android:background="@drawable/qrcode" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_space_size1"
                    android:background="#f2f4f5" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#fff"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="@dimen/common_space_size0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_me_tabnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/common_space_size6"
                            android:text="123"
                            android:textColor="#333"
                            android:textSize="@dimen/common_text_size16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_me_tabnum"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/common_space_size6"
                            android:text="@string/me_tab"
                            android:textColor="#999"
                            android:textSize="@dimen/common_text_size12" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/common_space_size0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_me_tabnum2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/common_space_size6"
                            android:text="23"
                            android:textColor="#333"
                            android:textSize="@dimen/common_text_size16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_me_tabnum2"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/common_space_size6"
                            android:text="@string/me_tab2"
                            android:textColor="#999"
                            android:textSize="@dimen/common_text_size12" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/common_space_size0"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tv_me_tabnum3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/common_space_size6"
                            android:text="63"
                            android:textColor="#333"
                            android:textSize="@dimen/common_text_size16" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_me_tabnum3"
                            android:layout_centerHorizontal="true"
                            android:layout_marginBottom="@dimen/common_space_size6"
                            android:text="@string/me_tab3"
                            android:textColor="#999"
                            android:textSize="@dimen/common_text_size12" />
                    </RelativeLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_space_size1"
                    android:background="#f2f4f5" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/common_space_size1"
                    android:layout_marginTop="@dimen/common_space_size6"
                    android:background="#f2f4f5" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
