<?xml version="1.0" encoding="utf-8"?>
<!-- 国家和区域界面搜索框的收回动画 -->
<set	
    xmlns:android="http://schemas.android.com/apk/res/android"     
	android:duration="300"    >    
    <scale        
		android:fromXScale="1"        
		android:fromYScale="1"        
		android:pivotX="100%"        
		android:pivotY="50%"        
		android:toXScale="0"        
		android:toYScale="1" />
	<alpha        
		android:fromAlpha="1.0"        
		android:toAlpha="0.1"/>
</set>
